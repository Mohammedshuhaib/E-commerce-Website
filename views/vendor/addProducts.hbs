<script>


    function show() {
        let x = document.getElementById('category').value

        const laptopsTags = document.getElementsByClassName('laptop')
        const mobileTags = document.getElementsByClassName('mobile')

        if (x == "mobile") {
            Array.from(mobileTags).forEach((element) => {
                element.style.visibility = 'visible'

            })

        } else {
            Array.from(mobileTags).forEach((element) => {
                element.style.visibility = 'hidden'
            })
        }
        if (x == "laptops") {
            Array.from(laptopsTags).forEach((element) => {
                element.style.visibility = 'visible'
            })

        } else {
            Array.from(laptopsTags).forEach((element) => {
                element.style.visibility = 'hidden'
            })
        }
    }

