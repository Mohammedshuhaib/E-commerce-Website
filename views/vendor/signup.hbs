<section class="vh-100 ">
    <div class="container py-5 h-100 ">
        <div class="row justify-content-center align-items-center h-100 ">
            <div class="col-12 col-lg-9 col-xl-7 ">
                <div class="card shadow-2-strong card-registration bg-dark" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Vendor Registration Form</h3>
                        <form action="/vendor/signup" method="post" id="vendorSignup">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">First Name</label>
                                        <input type="text" name="firstName" id="firstName"
                                            class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="lastName">Last Name</label>
                                        <input type="text" id="lastName" name="lastName"
                                            class="form-control form-control-lg" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control form-control-lg" id="" />

                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="phone Number" class="form-label">Phone Number</label>
                                        <input type="phoneNumber" name="phoneNumber"
                                            class="form-control form-control-lg" id="" />

                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="">Password</label>
                                        <input type="password" id="" name="password"
                                            class="form-control form-control-lg" />

                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="password">Repeat Password</label>
                                        <input type="password" id="" name="cPassword"
                                            class="form-control form-control-lg" />



                                    </div>
                                </div>
                                <div>
                                    {{#if alreadyexistv}}
                                    <p class="fw-bold text-danger">This Email Is Already Registered</p>
                                    {{/if}}
                                </div>
                            </div>

                            <div>
                                <button class="btn btn-primary btn-sm" type="submit"> SUBMIT</button>
                            </div>
                            <div class="text-center fs-6">
                                <a>Already Have an account</a> <a href="/vendor/login">Sign-In</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>