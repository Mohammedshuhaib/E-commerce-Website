<div class="container">


    <div class="row">
        <div class=" col-md-6 col-lg-4 mx-auto " onload="display()">
            <h1 class="  mb-5 mt-5 ms-5">Edit Product </h1>
            <form action="/vendor/editProduct/{{product.products._id}}" method="post" enctype="multipart/form-data">

                <table class="table table-borderless">

                    <tr>
                        <td>
                            <p class="opacity-75">Category</p>
                        </td>
                        <td>
                            <select id="category" onchange="show()" class="form-select opacity-75 "
                                aria-label="Default select example" name="category">
                                {{#if product.products.mobile}}
                                <option value="mobile">Mobile</option>
                                {{else}}
                                <option value="laptops">Laptops</option>
                                {{/if}}
                            </select>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="opacity-75 ">Title</p>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="title" value="{{product.products.title}}">
                        </td>
                    </tr>

                    {{#if product.products.mobile}}
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75">Brand</p>
                        </td>
                        <td class="mobile">
                            <select class="form-select opacity-75 " name="phonebrand"
                                aria-label="Default select example">
                                <option value=" {{product.products.brand}}">{{product.products.brand}}</option>
                                <option value="samsung">SAMSUNG</option>
                                <option value="LG">LG</option>
                                <option value="oppo">OPPO</option>
                                <option value="vivo">VIVO</option>
                                <option value="mi">Mi</option>
                                <option value="realme">REALME</option>
                                <option value="apple">APPLE</option>
                                <option value="google">GOOGLE</option>
                                <option value="onePlus">ONE PLUS</option>
                                <option value="nokia">NOKIA</option>

                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75">RAM</p>
                        </td>
                        <td class="mobile">
                            <select class="form-select opacity-75 " name="ram" aria-label="Default select example">
                                <option value=" {{product.products.ram}}">{{product.products.ram}}</option>
                                <option value="2G">2 GB</option>
                                <option value="3GB">3 GB</option>
                                <option value="4GB">4 GB</option>
                                <option value="6GB">6 GB</option>
                                <option value="8GB">8 GB</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75">ROM</p>
                        </td>
                        <td class="mobile">
                            <select class="form-select opacity-75 " name="rom" aria-label="Default select example">
                                <option value=" {{product.products.rom}}">{{product.products.rom}}</option>
                                <option value="32G">32 GB</option>
                                <option value="64GB">64 GB</option>
                                <option value="128GB">128 GB</option>
                                <option value="256GB">256 GB</option>

                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75">DISPLAY</p>
                        </td>
                        <td class="mobile">
                            <select class="form-select opacity-75 " name="mobiledisplay"
                                aria-label="Default select example">
                                <option value=" {{product.products.display}}">{{product.products.display}}</option>
                                <option value="lcd">LCD</option>
                                <option value="ipsLcd">IPS LCD</option>
                                <option value="oLed">O LED</option>
                                <option value="amoled">AMOLED </option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75 ">PROCESSOR</p>
                        </td>
                        <td class="mobile">
                            <input type="text" class="form-control" name="mobileprocessor"
                                value="{{product.products.processor}}">
                        </td>
                    </tr>
                    <tr>
                        <td class="mobile">
                            <p class="opacity-75">OPERATING SYSTEM</p>
                        </td>
                        <td class="mobile">
                            <select class="form-select opacity-75 " name="mobileOs" aria-label="Default select example">
                                <option value=" {{product.products.os}} ">{{product.products.os}}</option>
                                <option value="android">ANDROID</option>
                                <option value="ios">IOS</option>


                            </select>
                        </td>
                    </tr>
                    {{/if}}
                    <tr>
                        <td>
                            <p class="opacity-75">Price</p>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="price" min="0"
                                value="{{product.products.price}}">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="opacity-75">SCREEN SIZE</p>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="screenSize" min="0"
                                value="{{product.products.screenSize}}">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p class="opacity-75"> QUANTITY</p>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="quantity" min="0"
                                value="{{product.products.quantity}}">
                        </td>
                    </tr>
                    {{#if product.products.laptop}}
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75">Brand</p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="lapBrand" aria-label="Default select example">
                                <option value=" {{product.products.brand}}">{{product.products.brand}}</option>
                                <option value="lenovo">LENOVA</option>
                                <option value="hp">HP</option>
                                <option value="dell">DELL</option>
                                <option value="acer">ACER</option>
                                <option value="mi">Mi</option>
                                <option value="realme">REALME</option>
                                <option value="apple">APPLE</option>
                                <option value="google">GOOGLE</option>
                                <option value="asus">ASUS</option>
                                <option value="vaio">VAIO</option>
                                <option value="msi">MSI</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75">PROCESSOR BRAND</p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="processorBrand"
                                aria-label="Default select example">
                                <option value="{{product.products.processorBrand}}">{{product.products.processorBrand}}</option>
                                <option value="amd">AMD</option>
                                <option value="intel">Intel</option>
                                <option value="qualcomm">Qualcomm</option>
                                <option value="mediaTek">Media Tek</option>
                                <option value="apple">APPLE</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75">RAM CAPACITY</p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="lapRam" aria-label="Default select example">
                                <option value=" {{product.products.ram}}">{{product.products.ram}}</option>
                                <option value="4gb">4 GB</option>
                                <option value="8gb">8 GB</option>
                                <option value="16gb">16 GB</option>
                                <option value="32gb">32 GB</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75 ">Occassion</p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="occassion"
                                aria-label="Default select example">
                                <option value="{{product.products.occassion}}">{{product.products.occassion}}</option>
                                <option value="gaming">Gaming</option>
                                <option value="normal">Proffesional</option>
                                <option value="proffesional">Proffesional</option>

                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75">OPERATIN SYSTEM</p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="lapOs" aria-label="Default select example">
                                <option value="{{product.products.os}}">{{product.products.os}}</option>
                                <option value="windos">WINDOWS</option>
                                <option value="linux">LINUX</option>
                                <option value="mac">MAC</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75">SSD CAPACITY </p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="ssdCapacity"
                                aria-label="Default select example">
                                <option value="{{product.products.ssd}}">{{product.products.ssd}}</option>
                                <option value="128gb">128 GB</option>
                                <option value="256gb">256 GB</option>
                                <option value="512gb">512 GB</option>
                                <option value="1tb">1 TB</option>
                                <option value="2tb">2 TB</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="laptop">
                            <p class="opacity-75 ">HDD CAPACITY </p>
                        </td>
                        <td class="laptop">
                            <select class="form-select opacity-75 " name="hddCapacity"
                                aria-label="Default select example">
                                <option value="{{product.products.hdd}}">{{product.products.hdd}}</option>
                                <option value="none">NONE</option>
                                <option value="128gb">128 GB</option>
                                <option value="256gb">256 GB</option>
                                <option value="512gb">512 GB</option>
                                <option value="1tb">1 TB</option>
                                <option value="2tb">2 TB</option>
                            </select>
                        </td>
                    </tr>
                    {{/if}}
                    <tr>
        </div>
    </div>
    </td>
    </tr>
    </table>
</div>
<div class="col-md-6 mt-5 ">
    {{!-- <h1 style="padding-left: 0.8em;" class="fs-2 text-warning mb-5 mt-5 ms-5">Add Images </h1> --}}
    <div class="ms-5">
        <h1 class="fs-2 text-warning mb-5 ms-5">Choose Images </h1>
    </div>
    <div class="row">
        <div class="col-md-6 col-12">
            <input type="file" accept="image/*" name="image1" id="imgfile" onchange="loadFile1(event)">
            <p><img src="/images/productsImages/{{product.products._id}}(1).jpg" id="img1" width="200" height="200" />
            </p>
        </div>
        <div class="col-md-6 col-12">
            <input type="file" accept="image/*" name="image2" id="imgfile" onchange="loadFile2(event)">
            <p><img src="/images/productsImages/{{product.products._id}}(2).jpg" id="img2" width="200" height="200"></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12">
            <input type="file" accept="image/*" name="image3" id="imgfile" onchange="loadFile3(event)">
            <p><img src="/images/productsImages/{{product.products._id}}(3).jpg" id="img3" width="200" height="200" />
            </p>
        </div>
        <div class="col-md-6 col-12">
            <input type="file" accept="image/*" name="image4" id="imgfile" onchange="loadFile4(event)">
            <p><img src="/images/productsImages/{{product.products._id}}(3).jpg" id="img4" width="200" height="200"></p>
        </div>
    </div>
</div>
</div>
<div class="row">
    <div class="d-flex justify-content-center mt-5 mb-5 ">
        <input class="btn btn-success " type="submit" value="submit">
    </div>
</div>
</form>
</div>
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
        </div>
    </div>
</footer>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script>
    var loadFile1 = function (event) {
        const img = document.getElementById('img1')
        img.src = URL.createObjectURL(event.target.files[0]);
    };

    var loadFile2 = function (event) {
        const img = document.getElementById('img2')
        img.src = URL.createObjectURL(event.target.files[0]);
    };
    var loadFile3 = function (event) {
        const img = document.getElementById('img3')
        img.src = URL.createObjectURL(event.target.files[0]);
    };
    var loadFile4 = function (event) {
        const img = document.getElementById('img4')
        img.src = URL.createObjectURL(event.target.files[0]);
    };
</script>